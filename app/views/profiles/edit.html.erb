

<%= form_with model: @profile, url: profile_path(@profile), method: :put, local: true do |form| %>
<%=@profile.id %>
<div class="flex flex-col w-80">
    <div class="my-2">
        <%= form.label :username, class: "flex" %>
        <%= form.label :username, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full flex", value: @profile.person.name %>
    </div>

    <div class="my-2">
        <%= form.label :role_id, class: "flex" %>
        <%= form.select :role_id, options_from_collection_for_select(@roles, :id, :name, @profile.role_id), { prompt: 'Select a role' }, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
    </div>


    <div class="my-2">
        <%= form.submit  "Update" ,class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
    </div>
</div>
<% end %>
