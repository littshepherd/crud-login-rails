<div  class="mx-auto md:w-1/3 w-full">
<h1 class="text-3xl" >Login to dashboard</h1>
<%= form_with url: "/authenticate", method: :post do |form| %>
    <div class="my-2">
    <%= form.label :username %>
    <%= form.text_field :username, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-2">
    <%= form.label :password_digest %>
    <%= form.password_field :password, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div> 
        
        <%= link_to 'no tienes cuenta? crea una', new_person_path %>
    </div>

    <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer", value: "login" %>
    </div>
<% end %>
</div>
